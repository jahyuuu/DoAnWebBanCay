@model DoAnWebBanCay.Models.Cay

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin chi tiết cây</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLoai)
        </dd>

        <dt>
            Tên cây
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenCay)
        </dd>

        <dt>
            Hình
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.HinhAnh)*@
            <img src="@Model.HinhAnh" width="85%" height="500px"/>
        </dd>

        <dt>
            Gia bán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GiaBan)
        </dd>

        <dt>
            Số lượng tồn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuongTon)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MaCay }) |
    @Html.ActionLink("Back to List", "ListCay")
</p>

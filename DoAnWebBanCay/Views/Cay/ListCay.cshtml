@model IEnumerable<DoAnWebBanCay.Models.Cay>
@{
    ViewBag.Title = "ListCay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DANH SÁCH CÂY</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th> Mã loại </th>
        <th> Tên cây</th>
        <th> Hình ảnh </th>
        <th> Giá bán</th>
        <th> Số lượng tồn</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MaLoai)</td>
            <td>@Html.DisplayFor(modelItem => item.TenCay)</td>
            <td><img src="@item.HinhAnh" alt="hinh thumbnail" width="85%" height="250px"/></td>
            <td>@Html.DisplayFor(modelItem => item.GiaBan)</td>
            <td>@Html.DisplayFor(modelItem => item.SoLuongTon)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaCay }) |
                @Html.ActionLink("Detail", "Detail", new { id = item.MaCay }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaCay })
            </td>
        </tr>
    }
</table>

